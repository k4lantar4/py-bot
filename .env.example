# Django Settings
DEBUG=False
SECRET_KEY=your_django_secret_key
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Database Settings
DB_NAME=v2ray_bot
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_HOST=postgres
DB_PORT=5432
DATABASE_URL=postgres://postgres:your-secure-password@db:5432/v2ray_bot

# Redis Settings
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_URL=redis://redis:6379/0

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Telegram Bot Settings
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com
ADMIN_USER_IDS=["123456789","987654321"]

# 3X-UI API Settings
THREEXUI_API_TIMEOUT=30
THREEXUI_SESSION_EXPIRY=3600

# Payment Settings
# Zarinpal Payment Gateway
ZARINPAL_MERCHANT=your_merchant_id
ZARINPAL_SANDBOX=True  # Set to False in production
ZARINPAL_CALLBACK_URL=https://your-domain.com/api/v1/payments/verify

# Card Payment
CARD_NUMBER=your_card_number
CARD_HOLDER=your_card_holder
CARD_PAYMENT_VERIFICATION_TIMEOUT_MINUTES=30

# Security Settings
JWT_SECRET_KEY=your_jwt_secret_key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Logging Settings
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn  # Optional

# Nginx Settings
NGINX_PORT=80
NGINX_SSL_PORT=443

# Frontend Settings
REACT_APP_API_URL=http://localhost/api/v1
REACT_APP_WS_URL=ws://localhost/ws
REACT_APP_DEFAULT_LANGUAGE=fa

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Locale Settings
TIME_ZONE=Asia/Tehran
LANGUAGE_CODE=fa-ir
USE_I18N=True
USE_L10N=True
USE_TZ=True

# 3x-UI Panel
XUI_PANEL_URL=http://your-panel-url
XUI_PANEL_USERNAME=admin
XUI_PANEL_PASSWORD=your_secure_password

# SSL/TLS
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem 