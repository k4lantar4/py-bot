# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com

# Database Settings
POSTGRES_DB=v2ray_bot
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password
DATABASE_URL=postgres://postgres:your-secure-password@db:5432/v2ray_bot

# Redis Settings
REDIS_URL=redis://redis:6379/0

# Email Settings
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Telegram Bot Settings
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_WEBHOOK_URL=https://your-domain.com/webhook
ADMIN_USER_IDS=["123456789", "987654321"]

# 3X-UI API Settings
THREEXUI_API_TIMEOUT=30
THREEXUI_SESSION_EXPIRY=3600

# Payment Settings
# Zarinpal Payment Gateway
ZARINPAL_MERCHANT_ID=your-zarinpal-merchant-id
ZARINPAL_SANDBOX=True  # Set to False in production
ZARINPAL_CALLBACK_URL=https://your-domain.com/api/v1/payments/verify

# Card Payment
CARD_NUMBER=your-card-number
CARD_HOLDER=your-card-holder-name
CARD_PAYMENT_VERIFICATION_TIMEOUT_MINUTES=30

# Security Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Logging Settings
LOG_LEVEL=INFO
SENTRY_DSN=your-sentry-dsn  # Optional

# Nginx Settings
NGINX_PORT=80
NGINX_SSL_PORT=443

# Frontend Settings
REACT_APP_API_URL=http://localhost/api/v1
REACT_APP_DEFAULT_LANGUAGE=fa

# Celery Settings
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# Locale Settings
TIME_ZONE=Asia/Tehran
LANGUAGE_CODE=fa-ir
USE_I18N=True
USE_L10N=True
USE_TZ=True 